{
  "manifest_version": 3,
  "name": "Quick Notes",
  "version": "1.0",
  "description": "Add and manage notes, stored locally in your browser.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": ["storage"],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "commands": {
    "mic-note": {
      "suggested_key": {
        "default": "Ctrl+M",
        "mac": "Command+M"
      },
      "description": "Activate mic in popup"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
} 